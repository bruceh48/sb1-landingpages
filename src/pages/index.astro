---
import Layout from '../layouts/Layout.astro';
import { cityData } from '../data/cities';

const cities = cityData.map(data => data.city);
---

<Layout title="SEO Services in Western Australia" description="Professional SEO services across Western Australia" city="Western Australia">
  <div class="container mx-auto px-4 py-20">
    <h1 class="text-4xl font-bold text-center mb-12">SEO Services in Western Australia</h1>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {cities.map(city => (
        <a 
          href={`/${city.toLowerCase()}-seo-company`}
          class="block p-6 bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow"
        >
          <h2 class="text-2xl font-bold mb-4">{city} SEO Services</h2>
          <p class="text-gray-600">Professional SEO services in {city}</p>
        </a>
      ))}
    </div>
  </div>
</Layout>