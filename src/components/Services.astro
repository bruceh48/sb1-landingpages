---
interface Props {
  city: string;
}

const { city } = Astro.props;

const services = [
  {
    title: "Local SEO",
    description: `Dominate local search results in ${city} and attract more customers from your area. We optimize your business for local searches and Google Maps.`,
    features: [
      "Google My Business Optimization",
      "Local Citation Building",
      "Local Keyword Research",
      "Review Management"
    ]
  },
  {
    title: "Technical SEO",
    description: "Improve your website's technical foundation to rank higher in search results and provide better user experience.",
    features: [
      "Site Speed Optimization",
      "Mobile Optimization",
      "Schema Markup",
      "Technical Audits"
    ]
  },
  {
    title: "Content Strategy",
    description: "Create engaging, SEO-optimized content that resonates with your target audience and drives conversions.",
    features: [
      "Keyword Research",
      "Content Planning",
      "Blog Writing",
      "Content Optimization"
    ]
  },
  {
    title: "Link Building",
    description: "Build high-quality backlinks to increase your website's authority and improve search rankings.",
    features: [
      "Quality Link Outreach",
      "Content Marketing",
      "Digital PR",
      "Brand Mentions"
    ]
  }
];
---

<section id="services" class="py-20">
  <div class="container mx-auto px-4">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-4xl font-bold mb-6">
        Our SEO Services in {city}
      </h2>
      <p class="text-xl text-gray-600">
        Comprehensive SEO solutions tailored to your business needs
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        services.map((service) => (
          <div class="bg-white p-8 rounded-lg shadow-lg border border-gray-100 hover:shadow-xl transition duration-300">
            <h3 class="text-2xl font-bold mb-4 text-primary">{service.title}</h3>
            <p class="text-gray-600 mb-6">{service.description}</p>
            <ul class="space-y-3">
              {service.features.map(feature => (
                <li class="flex items-center text-gray-700">
                  <svg class="w-5 h-5 text-primary mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</section>