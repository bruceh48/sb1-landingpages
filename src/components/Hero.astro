---
interface Props {
  city: string;
}

const { city } = Astro.props;
---

<section class="relative bg-gradient-to-br from-primary to-secondary py-32 lg:py-48">
  <div class="absolute inset-0 bg-black opacity-50"></div>
  <div class="container mx-auto px-4 relative">
    <div class="max-w-4xl mx-auto text-center text-white">
      <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
        {city}'s Premier SEO Agency
      </h1>
      <p class="text-xl md:text-2xl mb-12 text-gray-200">
        Dominate Search Results & Grow Your Business with Data-Driven SEO Strategies
      </p>
      <div class="flex flex-col sm:flex-row gap-6 justify-center">
        <a
          href="#contact"
          class="bg-white text-primary px-8 py-4 rounded-full font-bold text-lg hover:bg-gray-100 transition duration-300 shadow-lg"
        >
          Get Free SEO Audit
        </a>
        <a
          href="#services"
          class="bg-transparent border-2 border-white text-white px-8 py-4 rounded-full font-bold text-lg hover:bg-white hover:text-primary transition duration-300"
        >
          Our Services
        </a>
      </div>
    </div>
  </div>
</section>

<section class="py-16 bg-gray-100">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
      <div class="bg-white p-8 rounded-lg shadow-lg">
        <h3 class="text-2xl font-bold text-primary mb-4">100+</h3>
        <p class="text-gray-600">Local Businesses Helped</p>
      </div>
      <div class="bg-white p-8 rounded-lg shadow-lg">
        <h3 class="text-2xl font-bold text-primary mb-4">500%</h3>
        <p class="text-gray-600">Average Traffic Increase</p>
      </div>
      <div class="bg-white p-8 rounded-lg shadow-lg">
        <h3 class="text-2xl font-bold text-primary mb-4">#1</h3>
        <p class="text-gray-600">Ranked SEO Agency in {city}</p>
      </div>
    </div>
  </div>
</section>